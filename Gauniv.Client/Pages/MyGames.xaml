<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:Gauniv.Client.ViewModel"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             x:Class="Gauniv.Client.Pages.MyGames"
             Title="My Games"
             x:DataType="vm:MyGamesViewModel"
             x:Name="Page"
             BackgroundColor="{AppThemeBinding Light={StaticResource Gray100}, Dark={StaticResource Gray950}}">

    <Grid RowDefinitions="Auto,*" Padding="0">

        <!-- En-tÃªte -->
        <Border Grid.Row="0" Padding="20,28,20,18">
            <Border.StrokeShape>
                <RoundRectangle CornerRadius="0,0,28,28" />
            </Border.StrokeShape>
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="{StaticResource Primary}" Offset="0.0" />
                    <GradientStop Color="{StaticResource Secondary}" Offset="1.0" />
                </LinearGradientBrush>
            </Border.Background>
            <Border.Shadow>
                <Shadow Brush="Black" Offset="0,6" Radius="16" Opacity="0.25" />
            </Border.Shadow>

            <Grid RowDefinitions="Auto,Auto" ColumnDefinitions="*,Auto" RowSpacing="6">
                <Label Grid.Row="0" Grid.Column="0"
                       Text="My Games"
                       FontSize="28"
                       FontAttributes="Bold"
                       TextColor="White" />

                <Border Grid.Row="0" Grid.Column="1"
                        Padding="10,6"
                        BackgroundColor="{AppThemeBinding Light=White, Dark={StaticResource Gray900}}"
                        Opacity="0.9">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="14" />
                    </Border.StrokeShape>
                    <Label Text="{Binding GamesToBuy.Count, StringFormat='{}{0}'}"
                           FontSize="13"
                           FontAttributes="Bold"
                           TextColor="{StaticResource Primary}" />
                </Border>

                <Label Grid.Row="1" Grid.ColumnSpan="2"
                       Text="Installed and ready to play"
                       FontSize="13"
                       TextColor="White"
                       Opacity="0.85" />
            </Grid>
        </Border>

        <!-- Liste des jeux -->
        <CollectionView Grid.Row="1"
                        ItemsSource="{Binding GamesToBuy}"
                        Margin="16,14"
                        SelectionMode="None"
                        VerticalScrollBarVisibility="Never">

            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="vm:GameItemViewModel">
                    <Border Padding="14"
                            BackgroundColor="{AppThemeBinding Light=White, Dark={StaticResource Gray900}}">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="18" />
                        </Border.StrokeShape>
                        <Border.Shadow>
                            <Shadow Brush="Black" Offset="0,6" Radius="14" Opacity="0.14" />
                        </Border.Shadow>

                        <Grid ColumnDefinitions="52,*,Auto" RowDefinitions="Auto,Auto" ColumnSpacing="12" RowSpacing="8">
                            <!-- IcÃ´ne -->
                            <Border Grid.RowSpan="2" Grid.Column="0"
                                    HeightRequest="52" WidthRequest="52"
                                    BackgroundColor="{AppThemeBinding Light={StaticResource Gray200}, Dark={StaticResource Gray600}}">
                                <Border.StrokeShape>
                                    <RoundRectangle CornerRadius="14" />
                                </Border.StrokeShape>
                                <Label Text="ðŸŽ®" FontSize="24" HorizontalOptions="Center" VerticalOptions="Center" />
                            </Border>

                            <!-- Titre + infos -->
                            <VerticalStackLayout Grid.Column="1" Grid.Row="0" Spacing="2">
                                <Label Text="{Binding Game.Name}"
                                       FontSize="16"
                                       FontAttributes="Bold"
                                       LineBreakMode="TailTruncation" />

                                <Label Text="{Binding Game.Price, StringFormat='Price: {0} â‚¬'}"
                                       FontSize="13"
                                       TextColor="{AppThemeBinding Light={StaticResource Gray600}, Dark={StaticResource Gray400}}" />
                            </VerticalStackLayout>

                            <!-- Boutons -->
                            <VerticalStackLayout Grid.Column="2" Grid.Row="0" Spacing="8" HorizontalOptions="End">
                                <Button Text="{Binding ActionLabel}"
                                        IsVisible="{Binding IsGameRunning, Converter={toolkit:InvertedBoolConverter}}"
                                        Command="{Binding BindingContext.GameActionCommand, Source={x:Reference Page}}"
                                        CommandParameter="{Binding .}"
                                        FontSize="13"
                                        FontAttributes="Bold"
                                        BackgroundColor="{StaticResource Primary}"
                                        TextColor="White"
                                        CornerRadius="14"
                                        HeightRequest="36" />

                                <Button Text="Stop"
                                        IsVisible="{Binding IsGameRunning}"
                                        Command="{Binding Source={RelativeSource AncestorType={x:Type vm:MyGamesViewModel}}, Path=StopGameCommand}"
                                        CommandParameter="{Binding .}"
                                        FontSize="13"
                                        BackgroundColor="{AppThemeBinding Light={StaticResource Gray200}, Dark={StaticResource Gray600}}"
                                        TextColor="{AppThemeBinding Light={StaticResource Gray900}, Dark=White}"
                                        CornerRadius="14"
                                        HeightRequest="36" />
                            </VerticalStackLayout>

                            <!-- Versions -->
                            <HorizontalStackLayout Grid.Column="1" Grid.Row="1" Spacing="12">
                                <Label Text="{Binding LocalVersion, StringFormat='Local: {0}'}"
                                       FontSize="12"
                                       TextColor="{AppThemeBinding Light={StaticResource Gray600}, Dark={StaticResource Gray400}}" />
                                <Label Text="{Binding Game.CurrentVersion, StringFormat='Online: {0}'}"
                                       FontSize="12"
                                       TextColor="{AppThemeBinding Light={StaticResource Gray600}, Dark={StaticResource Gray400}}" />
                            </HorizontalStackLayout>
                        </Grid>
                    </Border>
                </DataTemplate>
            </CollectionView.ItemTemplate>

            <CollectionView.EmptyView>
                <VerticalStackLayout VerticalOptions="Center"
                                     HorizontalOptions="Center"
                                     Spacing="16"
                                     Padding="40">
                    <Label Text="No games yet"
                           FontSize="20"
                           FontAttributes="Bold"
                           HorizontalTextAlignment="Center"
                           TextColor="{AppThemeBinding Light={StaticResource Gray600}, Dark={StaticResource Gray400}}" />
                    <Label Text="Buy a game from Games to see it here."
                           FontSize="14"
                           HorizontalTextAlignment="Center"
                           TextColor="{AppThemeBinding Light={StaticResource Gray500}, Dark={StaticResource Gray500}}" />
                </VerticalStackLayout>
            </CollectionView.EmptyView>
        </CollectionView>

        <!-- Overlay loading -->
        <Grid Grid.RowSpan="2"
              BackgroundColor="{AppThemeBinding Light=White, Dark=Black}"
              Opacity="0.15"
              IsVisible="{Binding IsLoading}" />
        <ActivityIndicator
            Grid.RowSpan="2"
            IsVisible="{Binding IsLoading}"
            IsRunning="{Binding IsLoading}" />

    </Grid>
</ContentPage>