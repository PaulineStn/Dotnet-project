<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:Gauniv.Client.ViewModel"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:network="clr-namespace:Gauniv.Network;assembly=Gauniv.Network"
             x:Class="Gauniv.Client.Pages.Index"
             Title="Index"
             x:DataType="vm:IndexViewModel"
             BackgroundColor="{AppThemeBinding Light={StaticResource Gray100}, Dark={StaticResource Gray950}}">
    
    
    <Grid RowDefinitions="Auto,*" Padding="0">
        <!-- En-tête -->
        <Border Grid.Row="0" Padding="20,28,20,18">
            <Border.StrokeShape>
                <RoundRectangle CornerRadius="0,0,28,28" />
            </Border.StrokeShape>
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="{StaticResource Primary}" Offset="0.0" />
                    <GradientStop Color="{StaticResource Secondary}" Offset="1.0" />
                </LinearGradientBrush>
            </Border.Background>
            <Border.Shadow>
                <Shadow Brush="Black" Offset="0,6" Radius="16" Opacity="0.25" />
            </Border.Shadow>

            <Grid RowDefinitions="Auto,Auto" ColumnDefinitions="*,Auto" RowSpacing="6">
                <Label Grid.Row="0" Grid.Column="0"
                       Text="Games"
                       FontSize="28"
                       FontAttributes="Bold"
                       TextColor="White" />

                <Border Grid.Row="0" Grid.Column="1"
                        Padding="10,6"
                        BackgroundColor="{AppThemeBinding Light=White, Dark={StaticResource Gray900}}"
                        Opacity="0.9">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="14" />
                    </Border.StrokeShape>
                    <Label Text="{Binding Games.Count, StringFormat='{}{0}'}"
                           FontSize="13"
                           FontAttributes="Bold"
                           TextColor="{StaticResource Primary}" />
                </Border>

                <Label Grid.Row="1" Grid.ColumnSpan="2"
                       Text="Browse, buy, download, and play"
                       FontSize="13"
                       TextColor="White"
                       Opacity="0.85" />
            </Grid>
        </Border>

        <!-- Liste des jeux -->
        <CollectionView Grid.Row="1"
                        ItemsSource="{Binding Games}"
                        Margin="16,14"
                        SelectionMode="None"
                        HorizontalScrollBarVisibility="Never">
            
            <CollectionView.ItemsLayout>
                <LinearItemsLayout Orientation="Horizontal" ItemSpacing="14" />
            </CollectionView.ItemsLayout>
            
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="vm:GameItemViewModel">
                    <Border Padding="0"
                            WidthRequest="280"
                            BackgroundColor="{AppThemeBinding Light=White, Dark={StaticResource Gray900}}">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="20" />
                        </Border.StrokeShape>
                        <Border.Shadow>
                            <Shadow Brush="Black" Offset="0,6" Radius="14" Opacity="0.18" />
                        </Border.Shadow>
                        <Border.GestureRecognizers>
                            <TapGestureRecognizer 
                                Command="{Binding Source={RelativeSource AncestorType={x:Type vm:IndexViewModel}}, Path=SelectGameCommand}"
                                CommandParameter="{Binding .}"/>
                        </Border.GestureRecognizers>
                        <Grid RowDefinitions="140,Auto" Padding="10" RowSpacing="10">
                            <!-- Image (avec fallback si pas d'image) -->
                            <Border Grid.Row="0" Padding="0">
                                <Border.StrokeShape>
                                    <RoundRectangle CornerRadius="16" />
                                </Border.StrokeShape>
                                <Image Source="{Binding ImagePath, TargetNullValue='dotnet_bot.png'}"
                                       Aspect="AspectFill" />
                            </Border>

                            <!-- Infos + actions -->
                            <Grid Grid.Row="1" RowDefinitions="Auto,Auto,Auto" ColumnDefinitions="*,Auto" RowSpacing="6">
                                <Label Grid.Row="0" Grid.ColumnSpan="2"
                                       Text="{Binding Game.Name}"
                                       FontSize="16"
                                       FontAttributes="Bold"
                                       LineBreakMode="TailTruncation" />

                                <Label Grid.Row="1" Grid.ColumnSpan="2"
                                       Text="{Binding Game.Description}"
                                       FontSize="13"
                                       MaxLines="2"
                                       LineBreakMode="TailTruncation"
                                       TextColor="{AppThemeBinding Light={StaticResource Gray600}, Dark={StaticResource Gray400}}" />

                                <Label Grid.Row="2" Grid.Column="0"
                                       Text="{Binding Game.Price, StringFormat='{}{0} €'}"
                                       FontSize="15"
                                       FontAttributes="Bold"
                                       TextColor="{StaticResource Primary}"
                                       VerticalOptions="Center" />

                                <StackLayout Grid.Row="2" Grid.Column="1" Spacing="6" HorizontalOptions="End">
                                    <Button
                                        Text="{Binding ActionLabel}"
                                        Command="{Binding Source={RelativeSource AncestorType={x:Type vm:IndexViewModel}}, Path=GameActionCommand}"
                                        CommandParameter="{Binding .}"
                                        FontSize="13"
                                        FontAttributes="Bold"
                                        BackgroundColor="{StaticResource Primary}"
                                        TextColor="White"
                                        CornerRadius="14"
                                        HeightRequest="34" />

                                    <Button
                                        Text="Stop"
                                        Command="{Binding Source={RelativeSource AncestorType={x:Type vm:IndexViewModel}}, Path=StopGameCommand}"
                                        CommandParameter="{Binding .}"
                                        IsVisible="{Binding IsGameRunning}"
                                        FontSize="13"
                                        BackgroundColor="{AppThemeBinding Light={StaticResource Gray200}, Dark={StaticResource Gray600}}"
                                        TextColor="{AppThemeBinding Light={StaticResource Gray900}, Dark=White}"
                                        CornerRadius="14"
                                        HeightRequest="34" />
                                </StackLayout>
                            </Grid>
                        </Grid>

                    </Border>
                </DataTemplate>
            </CollectionView.ItemTemplate>
            
            <!-- Vue vide -->
            <CollectionView.EmptyView>
                <VerticalStackLayout VerticalOptions="Center" 
                                   HorizontalOptions="Center"
                                   Spacing="20"
                                   Padding="40">
                      <Label Text="No games available"
                          FontSize="20"
                          FontAttributes="Bold"
                          HorizontalTextAlignment="Center"
                          TextColor="{AppThemeBinding Light={StaticResource Gray600}, Dark={StaticResource Gray400}}" />
                      <Label Text="Come back later."
                          FontSize="14"
                          HorizontalTextAlignment="Center"
                          TextColor="{AppThemeBinding Light={StaticResource Gray500}, Dark={StaticResource Gray500}}" />
                </VerticalStackLayout>
            </CollectionView.EmptyView>
        </CollectionView>

             <!-- Overlay loading -->
             <Grid Grid.RowSpan="2"
                BackgroundColor="{AppThemeBinding Light=White, Dark=Black}"
                Opacity="0.15"
                IsVisible="{Binding IsLoading}" />
             <ActivityIndicator
                 Grid.RowSpan="2"
                 IsVisible="{Binding IsLoading}"
                 IsRunning="{Binding IsLoading}" />
    </Grid>
</ContentPage>