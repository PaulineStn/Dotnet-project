<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:Gauniv.Client.ViewModel"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:network="clr-namespace:Gauniv.Network;assembly=Gauniv.Network"
             x:Class="Gauniv.Client.Pages.Index"
             Title="Index"
             x:DataType="vm:IndexViewModel"
             BackgroundColor="{AppThemeBinding Light={StaticResource Gray100}, Dark={StaticResource Gray950}}">
    
    
    <Grid RowDefinitions="Auto,*" Padding="0">
        <ActivityIndicator 
            IsVisible="{Binding IsLoading}"
            IsRunning="{Binding IsLoading}" />
        
        <!-- En-tÃªte avec gradient -->
        <Frame Grid.Row="0" 
               Padding="20,30,20,20" 
               CornerRadius="0,0,30,30"
               HasShadow="True">
            <Frame.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="{StaticResource Primary}" Offset="0.0" />
                    <GradientStop Color="{StaticResource Secondary}" Offset="1.0" />
                </LinearGradientBrush>
            </Frame.Background>
            
            <VerticalStackLayout Spacing="10">
                <Label Text="ðŸŽ® Games Library"
                       FontSize="28"
                       FontAttributes="Bold"
                       TextColor="White"
                       HorizontalOptions="Center"/>
                <Label Text="{Binding Games.Count, StringFormat='{0} games available'}"
                       FontSize="14"
                       TextColor="White"
                       Opacity="0.8"
                       HorizontalOptions="Center"/>
            </VerticalStackLayout>
        </Frame>

        <!-- Liste des jeux avec design moderne -->
        <CollectionView Grid.Row="1"
                        ItemsSource="{Binding Games}"
                        Margin="15"
                        SelectionMode="None">
            
            <CollectionView.ItemsLayout>
                <LinearItemsLayout Orientation="Vertical" ItemSpacing="15"/>
            </CollectionView.ItemsLayout>
            
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="network:GameDto">
                    <Frame Padding="0" 
                           CornerRadius="20" 
                           HasShadow="True"
                           BackgroundColor="{AppThemeBinding Light=White, Dark={StaticResource Gray900}}">
                        <Frame.GestureRecognizers>
                            <TapGestureRecognizer 
                                Command="{Binding Source={RelativeSource AncestorType={x:Type vm:IndexViewModel}}, Path=SelectGameCommand}"
                                CommandParameter="{Binding .}"/>
                        </Frame.GestureRecognizers>
                        
                        <Grid ColumnDefinitions="120,*" RowDefinitions="*,Auto" HeightRequest="140">
                            <!-- Image avec effet overlay -->
                            <Frame Grid.RowSpan="2" 
                                   Padding="0" 
                                   CornerRadius="20,0,0,20"
                                   HasShadow="False"
                                   IsClippedToBounds="True">
                                <Image Source="{Binding ImagePath}"
                                       Aspect="AspectFill"/>
                            </Frame>

                            <!-- Contenu -->
                            <VerticalStackLayout Grid.Column="1" 
                                               Padding="15,15,15,10"
                                               Spacing="1">
                                <Label Text="{Binding Name}"
                                       FontSize="20"
                                       FontAttributes="Bold"
                                       TextColor="{AppThemeBinding Light={StaticResource Gray900}, Dark=White}"
                                       LineBreakMode="TailTruncation"/>
                                
                                <Label Text="{Binding Description}"
                                       FontSize="14"
                                       TextColor="{AppThemeBinding Light={StaticResource Gray600}, Dark={StaticResource Gray400}}"
                                       LineBreakMode="WordWrap"
                                       MaxLines="2"/>
                            </VerticalStackLayout>

                            <!-- Bouton d'action flottant -->
                                <Button Text="â–¶ Play"
                                        FontSize="14"
                                        FontAttributes="Bold"
                                        BackgroundColor="{StaticResource Primary}"
                                        TextColor="White"
                                        CornerRadius="15"
                                        HeightRequest="40"
                                        HorizontalOptions="End"
                                        Command="{Binding Source={RelativeSource AncestorType={x:Type vm:IndexViewModel}}, Path=SelectGameCommand}"
                                        CommandParameter="{Binding .}"/>
                            <Button Text="â–¶ V"
                                    FontSize="14"
                                    FontAttributes="Bold"
                                    BackgroundColor="{StaticResource Primary}"
                                    TextColor="White"
                                    CornerRadius="15"
                                    HeightRequest="40"
                                    HorizontalOptions="End"
                                    Command="{Binding Source={RelativeSource AncestorType={x:Type vm:IndexViewModel}}, Path=SelectGameCommand}"
                                    CommandParameter="{Binding .}"/>
                        </Grid>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
            
            <!-- Vue vide -->
            <CollectionView.EmptyView>
                <VerticalStackLayout VerticalOptions="Center" 
                                   HorizontalOptions="Center"
                                   Spacing="20"
                                   Padding="40">
                    <Label Text="ðŸŽ®"
                           FontSize="80"
                           HorizontalOptions="Center"/>
                    <Label Text="No games available"
                           FontSize="20"
                           FontAttributes="Bold"
                           HorizontalTextAlignment="Center"
                           TextColor="{AppThemeBinding Light={StaticResource Gray600}, Dark={StaticResource Gray400}}"/>
                    <Label Text="Come back later!"
                           FontSize="14"
                           HorizontalTextAlignment="Center"
                           TextColor="{AppThemeBinding Light={StaticResource Gray500}, Dark={StaticResource Gray500}}"/>
                </VerticalStackLayout>
            </CollectionView.EmptyView>
        </CollectionView>
    </Grid>
</ContentPage>