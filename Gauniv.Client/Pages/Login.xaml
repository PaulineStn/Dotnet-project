<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:Gauniv.Client.ViewModel"
                      xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="Gauniv.Client.Pages.Login"
             Title="Login"
             x:DataType="vm:LoginViewModel"
             BackgroundColor="{AppThemeBinding Light={StaticResource Gray100}, Dark={StaticResource Gray950}}">

       <Grid RowDefinitions="Auto,*" Padding="0">

              <!-- En-tÃªte -->
              <Border Grid.Row="0" Padding="20,28,20,18">
                     <Border.StrokeShape>
                            <RoundRectangle CornerRadius="0,0,28,28" />
                     </Border.StrokeShape>
                     <Border.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                   <GradientStop Color="{StaticResource Primary}" Offset="0.0" />
                                   <GradientStop Color="{StaticResource Secondary}" Offset="1.0" />
                            </LinearGradientBrush>
                     </Border.Background>
                     <Border.Shadow>
                            <Shadow Brush="Black" Offset="0,6" Radius="16" Opacity="0.25" />
                     </Border.Shadow>

                     <Grid RowDefinitions="Auto,Auto" RowSpacing="6">
                            <Label Text="Login"
                                      FontSize="28"
                                      FontAttributes="Bold"
                                      TextColor="White" />

                            <Label Grid.Row="1"
                                      Text="Sign in to buy and play"
                                      FontSize="13"
                                      TextColor="White"
                                      Opacity="0.85" />
                     </Grid>
              </Border>

              <!-- Contenu -->
              <ScrollView Grid.Row="1">
                     <VerticalStackLayout Padding="16" Spacing="14">

                            <Border Padding="18"
                                          BackgroundColor="{AppThemeBinding Light=White, Dark={StaticResource Gray900}}">
                                   <Border.StrokeShape>
                                          <RoundRectangle CornerRadius="20" />
                                   </Border.StrokeShape>
                                   <Border.Shadow>
                                          <Shadow Brush="Black" Offset="0,6" Radius="14" Opacity="0.14" />
                                   </Border.Shadow>

                                   <Grid RowDefinitions="Auto,Auto,Auto,Auto,Auto" RowSpacing="12">

                                          <!-- IcÃ´ne -->
                                          <Border Grid.Row="0"
                                                        HeightRequest="64" WidthRequest="64"
                                                        HorizontalOptions="Center"
                                                        BackgroundColor="{AppThemeBinding Light={StaticResource Gray200}, Dark={StaticResource Gray600}}">
                                                 <Border.StrokeShape>
                                                        <RoundRectangle CornerRadius="18" />
                                                 </Border.StrokeShape>
                                                 <Label Text="ðŸŽ®"
                                                           FontSize="28"
                                                           HorizontalOptions="Center"
                                                           VerticalOptions="Center" />
                                          </Border>

                                          <!-- Email -->
                                          <Border Grid.Row="1"
                                                        Padding="12,10"
                                                        BackgroundColor="{AppThemeBinding Light={StaticResource Gray100}, Dark={StaticResource Gray600}}">
                                                 <Border.StrokeShape>
                                                        <RoundRectangle CornerRadius="14" />
                                                 </Border.StrokeShape>
                                                 <Entry Text="{Binding Email}"
                                                           Placeholder="Email"
                                                           Keyboard="Email"
                                                           ClearButtonVisibility="WhileEditing"
                                                           TextColor="{AppThemeBinding Light={StaticResource Gray900}, Dark=White}"
                                                           PlaceholderColor="{AppThemeBinding Light={StaticResource Gray600}, Dark={StaticResource Gray200}}" />
                                          </Border>

                                          <!-- Mot de passe -->
                                          <Border Grid.Row="2"
                                                        Padding="12,10"
                                                        BackgroundColor="{AppThemeBinding Light={StaticResource Gray100}, Dark={StaticResource Gray600}}">
                                                 <Border.StrokeShape>
                                                        <RoundRectangle CornerRadius="14" />
                                                 </Border.StrokeShape>
                                                 <Entry Text="{Binding Password}"
                                                           Placeholder="Password"
                                                           IsPassword="True"
                                                           ClearButtonVisibility="WhileEditing"
                                                           TextColor="{AppThemeBinding Light={StaticResource Gray900}, Dark=White}"
                                                           PlaceholderColor="{AppThemeBinding Light={StaticResource Gray600}, Dark={StaticResource Gray200}}" />
                                          </Border>

                                          <!-- Erreur -->
                                          <Border Grid.Row="3"
                                                        IsVisible="{Binding HasError}"
                                                        Padding="12,10"
                                                        BackgroundColor="{AppThemeBinding Light={StaticResource Gray100}, Dark={StaticResource Gray600}}">
                                                 <Border.StrokeShape>
                                                        <RoundRectangle CornerRadius="14" />
                                                 </Border.StrokeShape>
                                                 <Label Text="{Binding ErrorMessage}"
                                                           FontSize="13"
                                                           LineBreakMode="WordWrap"
                                                           TextColor="{StaticResource Primary}" />
                                          </Border>

                                          <!-- Actions -->
                                          <VerticalStackLayout Grid.Row="4" Spacing="10">
                                                 <Button Text="Sign in"
                                                               Command="{Binding LoginCommand}"
                                                               IsEnabled="{Binding IsLoading, Converter={toolkit:InvertedBoolConverter}}"
                                                               BackgroundColor="{StaticResource Primary}"
                                                               TextColor="White"
                                                               FontAttributes="Bold"
                                                               CornerRadius="14"
                                                               HeightRequest="46" />

                                                 <Button Text="Create account"
                                                               Command="{Binding RegisterCommand}"
                                                               IsEnabled="{Binding IsLoading, Converter={toolkit:InvertedBoolConverter}}"
                                                               BackgroundColor="Transparent"
                                                               TextColor="{StaticResource Primary}"
                                                               FontAttributes="Bold"
                                                               BorderColor="{StaticResource Primary}"
                                                               BorderWidth="2"
                                                               CornerRadius="14"
                                                               HeightRequest="46" />

                                                 <ActivityIndicator IsRunning="{Binding IsLoading}"
                                                                                IsVisible="{Binding IsLoading}"
                                                                                Color="{StaticResource Primary}"
                                                                                HorizontalOptions="Center" />
                                          </VerticalStackLayout>

                                   </Grid>
                            </Border>
                     </VerticalStackLayout>
              </ScrollView>
       </Grid>
</ContentPage>
