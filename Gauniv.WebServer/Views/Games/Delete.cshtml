@model Gauniv.WebServer.Data.Game

@{
    ViewData["Title"] = "Supprimer un jeu";
}

<h1>Supprimer un jeu</h1>

<div class="alert alert-danger">
    <strong>Attention !</strong> Cette action est irr√©versible.
</div>

<div class="mb-3">
    <dl class="row">
        <dt class="col-sm-3">Nom</dt>
        <dd class="col-sm-9">@Model.Name</dd>

        <dt class="col-sm-3">Description</dt>
        <dd class="col-sm-9">@Model.Description</dd>

        <dt class="col-sm-3">Prix</dt>
        <dd class="col-sm-9">@Model.Price</dd>

        <dt class="col-sm-3">Version</dt>
        <dd class="col-sm-9">@Model.CurrentVersion</dd>
    </dl>
</div>

<form asp-action="Delete" asp-controller="Games" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Id" />

    <button type="submit" class="btn btn-danger">
        Supprimer
    </button>
    <a asp-action="Index" class="btn btn-secondary">
        Annuler
    </a>
</form>