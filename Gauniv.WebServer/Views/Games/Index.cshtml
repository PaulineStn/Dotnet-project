<h1>Liste des jeux disponibles</h1>

@model X.PagedList.IPagedList<Gauniv.WebServer.Data.Game>
@using X.PagedList.Mvc.Core
@using X.PagedList

@if (User.Identity?.IsAuthenticated == true && User.IsInRole("Admin"))
{
    <a class="btn btn-primary" asp-controller="Games" asp-action="Create">Ajouter un jeu</a>
    
}

<form asp-action="Index" asp-controller="Games" method="get" class="row g-2 mt-3 mb-3">
    <div class="col-md-4">
        <label class="form-label">Recherche</label>
        <input type="text"
               name="search"
               value="@Context.Request.Query["search"]"
               class="form-control"
               placeholder="Nom du jeu..." />
    </div>

    <div class="col-md-3">
        <label class="form-label">Catégorie</label>
        <select name="categoryId" class="form-select">
            <option value="">Toutes</option>
            @foreach (var c in (IEnumerable<Gauniv.WebServer.Data.Category>)ViewBag.Categories)
            {
                var selected = Context.Request.Query["categoryId"] == c.Id.ToString();
                <option value="@c.Id" selected="@(selected ? "selected" : null)">@c.Name</option>
            }
        </select>
    </div>

    <div class="col-md-2">
        <label class="form-label">Prix min</label>
        <input type="number"
               step="0.01"
               name="minPrice"
               value="@Context.Request.Query["minPrice"]"
               class="form-control" />
    </div>

    <div class="col-md-2">
        <label class="form-label">Prix max</label>
        <input type="number"
               step="0.01"
               name="maxPrice"
               value="@Context.Request.Query["maxPrice"]"
               class="form-control" />
    </div>

    <div class="col-md-1 d-flex align-items-end">
        <button type="submit" class="btn btn-primary w-100">OK</button>
    </div>

    <div class="col-12">
        <a class="btn btn-outline-secondary"
           asp-action="Index"
           asp-controller="Games">Réinitialiser</a>
    </div>
</form>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Nom</th>
            <th>Prix</th>
            <th>Description</th>
            <th>Catégories</th>
            <th>
                @if (User.Identity?.IsAuthenticated == true && User.IsInRole("Admin"))
                {
                    <a>Actions</a>
                }

            </th>
            <th>
                @if (User.Identity?.IsAuthenticated == true && User.IsInRole("User"))
                {
                    <a>Acheter</a>
                }

            </th>

        </tr>
    </thead>
    <tbody>
@foreach (var item in Model)
{
        <tr>
            <td>@item.Id</td>
            <td>@item.Name</td>
            <td>@item.Price</td>
            <td>@item.Description</td>
            <td>
                @foreach (var category in item.Categories)
                {
                    @category.Name<br />
                }
            </td>
            <td>
                @if (User.Identity?.IsAuthenticated == true && User.IsInRole("Admin"))
                {
                    <a asp-action="Edit" asp-route-id="@item.Id">Modifier</a>
                    <span> | </span>
                    <a asp-action="Delete" asp-route-id="@item.Id">Supprimer</a>
                }
            </td>
            <td>
                @if (User.Identity?.IsAuthenticated == true && User.IsInRole("User"))
                {
                    <a asp-controller="Games" asp-action="Checkout" asp-route-gameId="@item.Id">Acheter</a>
                }
            </td>
        </tr>
}
    </tbody>
</table>

<div class="mt-3">
    @Html.PagedListPager(
        Model,
        page => Url.Action("Index", new {
            page,
            categoryId = ViewBag.CurrentCategoryId,
            minPrice = ViewBag.CurrentMinPrice,
            maxPrice = ViewBag.CurrentMaxPrice,
            search = ViewBag.CurrentSearch
        }),
        new PagedListRenderOptions
        {
            UlElementClasses = new[] { "pagination" },
            LiElementClasses = new[] { "page-item" },
            PageClasses = new[] { "page-link" }
        }
    )
</div>

