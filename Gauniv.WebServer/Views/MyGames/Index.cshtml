@model X.PagedList.IPagedList<Gauniv.WebServer.Data.Game>
@using X.PagedList.Mvc.Core;
@using X.PagedList;

@{
    ViewData["Title"] = "Mes jeux";
}

<h1>Mes jeux</h1>

<form asp-action="Index" asp-controller="MyGames" method="get" class="row g-2 mt-3 mb-3">
    <div class="col-md-4">
        <label class="form-label">Recherche</label>
        <input type="text"
               name="search"
               value="@Context.Request.Query["search"]"
               class="form-control"
               placeholder="Nom du jeu..." />
    </div>

    <div class="col-md-4">
        <label class="form-label">Catégorie</label>
        <select name="categoryId" class="form-select">
            <option value="">Toutes</option>
            @foreach (var c in (IEnumerable<Gauniv.WebServer.Data.Category>)ViewBag.Categories)
            {
                var selected = Context.Request.Query["categoryId"] == c.Id.ToString();
                <option value="@c.Id" selected="@(selected ? "selected" : null)">@c.Name</option>
            }
        </select>
    </div>

    <div class="col-md-2 d-flex align-items-end">
        <button type="submit" class="btn btn-primary w-100">OK</button>
    </div>

    <div class="col-md-2 d-flex align-items-end">
        <a class="btn btn-outline-secondary w-100"
           asp-controller="MyGames"
           asp-action="Index">Réinitialiser</a>
    </div>
</form>

@if (Model == null || Model.TotalItemCount == 0)
{
    <div class="alert alert-info">
        Vous n'avez encore acheté aucun jeu.
    </div>

    <a class="btn btn-primary" asp-controller="Games" asp-action="Index">Voir la boutique</a>
}
else
{
    <p class="mb-3">
        <a class="btn btn-primary" asp-controller="Games" asp-action="Index">Voir la boutique</a>
    </p>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Prix</th>
                <th>Description</th>
                <th>Catégories</th>
            </tr>
        </thead>
        <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>@item.Price</td>
                <td>@item.Description</td>
                <td>
                    @if (item.Categories != null && item.Categories.Any())
                    {
                        foreach (var category in item.Categories)
                        {
                            @category.Name<br />
                        }
                    }
                    else
                    {
                        <span class="text-muted">Aucune</span>
                    }
                </td>
            </tr>
        }
        </tbody>
    </table>
}

<div class="mt-3">
    @Html.PagedListPager(
        Model,
        page => Url.Action("Index", new {
            page,
            categoryId = ViewBag.CurrentCategoryId,
            search = ViewBag.CurrentSearch
        }),
        new PagedListRenderOptions
        {
            UlElementClasses = new[] { "pagination" },
            LiElementClasses = new[] { "page-item" },
            PageClasses = new[] { "page-link" }
        }
    )
</div>


